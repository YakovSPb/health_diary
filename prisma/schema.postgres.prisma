// Схема для продакшена (PostgreSQL). Используется на Vercel при VERCEL=1.
// Локально по умолчанию используется schema.prisma (SQLite).

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Пользователь
model User {
  id                    String    @id @default(cuid())
  email                 String    @unique
  name                  String?
  emailVerified         DateTime?
  image                 String?
  password              String?   // Хешированный пароль для email/password auth
  passwordResetToken    String?   // Токен для сброса пароля
  passwordResetExpires  DateTime? // Срок действия токена

  // Личные данные для расчётов
  height                Int?      // Рост в см
  weight                Float?    // Вес в кг
  birthDate             DateTime?
  diabetesDiagnosisDate DateTime?
  shortInsulinBrand     String?   // Марка короткого инсулина
  
  // Nightscout интеграция
  nightscoutUrl         String?   // URL Nightscout (например, https://j04268661.nightscout-jino.ru/)
  lastNightscoutSync    DateTime? // Время последней синхронизации
  
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  // Связи
  accounts              Account[]
  sessions              Session[]
  carbRatios            CarbRatio[]
  meals                 Meal[]
  insulinDoses          InsulinDose[]
  glucoseReadings       GlucoseReading[]
  conversations         ChatConversation[]
  basalProfiles         BasalProfile[]
  mealAnalyses          MealAnalysis[]
  menuItems             MenuItem[]
  userPrompts           UserPrompt[]
}

// Запрос на сброс пароля (по email, чтобы всегда показывать ссылку)
model PasswordResetRequest {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@index([token])
  @@index([email])
}

// Кастомные промпты пользователя для AI-анализа (страница Анализы и анализ приёма пищи)
model UserPrompt {
  id        String   @id @default(cuid())
  userId    String
  key       String   // ANALYSIS_SYSTEM, ANALYSIS_INSTRUCTIONS, MEAL_PREDICT_SYSTEM, MEAL_PREDICT_INSTRUCTIONS
  value     String?  // null = использовать дефолт из кода
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, key])
  @@index([userId])
}

// Блюдо в личном меню пользователя (для быстрого добавления из дневника и голоса)
model MenuItem {
  id           String   @id @default(cuid())
  userId       String
  name         String
  carbsPer100g Float
  hasSugar     Boolean  @default(false) // В блюде есть сахар (подсветка в дневнике)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, name])
}

// NextAuth Account model
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// NextAuth Session model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// NextAuth VerificationToken model
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Углеводные коэффициенты
model CarbRatio {
  id        String   @id @default(cuid())
  userId    String
  timeOfDay String   // MORNING, AFTERNOON, EVENING
  ratio     Float    // Например, 1.5 = 1 ЕД на 1.5 углеводов
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, isActive])
}

// Приём пищи
model Meal {
  id           String      @id @default(cuid())
  userId       String
  date         DateTime    // Дата приёма
  time         String      // Время HH:MM
  notes        String?
  totalCarbs   Float       @default(0)
  totalProtein Float       @default(0)  // Общий белок
  totalFat     Float       @default(0)  // Общий жир
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  foodItems    FoodItem[]
  insulinDoses InsulinDose[]
  analysis     MealAnalysis?
  
  @@index([userId, date])
}

// Продукт в приёме пищи
model FoodItem {
  id             String   @id @default(cuid())
  mealId         String
  name           String
  carbsPer100g   Float    // Углеводы на 100г
  proteinPer100g Float?   // Белки на 100г (для будущего БЖУ анализа)
  fatPer100g     Float?   // Жиры на 100г
  sugarsPer100g  Float?   // Сахар на 100г (из DeepSeek), для подсветки названия
  weightGrams    Float    // Вес порции в граммах
  totalCarbs     Float    // Расчётное поле
  order          Int      @default(0)
  createdAt      DateTime @default(now())
  
  meal Meal @relation(fields: [mealId], references: [id], onDelete: Cascade)
  
  @@index([mealId])
}

// Доза инсулина
model InsulinDose {
  id        String   @id @default(cuid())
  userId    String
  mealId    String?  // Опционально, если связано с приёмом пищи
  timestamp DateTime
  units     Float    // Единицы инсулина
  type      String   // MEAL_BOLUS, CORRECTION, BASAL
  notes     String?
  createdAt DateTime @default(now())
  
  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  meal Meal? @relation(fields: [mealId], references: [id], onDelete: SetNull)
  
  @@index([userId, timestamp])
}

// Показание глюкозы
model GlucoseReading {
  id        String   @id @default(cuid())
  userId    String
  timestamp DateTime
  value     Float    // ммоль/л или мг/дл
  trend     String?  // RISING, FALLING, STABLE, RISING_FAST, FALLING_FAST
  source    String   @default("MANUAL") // NIGHTSCOUT, MANUAL
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, timestamp])
  @@unique([userId, timestamp, source]) // Избежание дубликатов
}

// Чат с DeepSeek
model ChatConversation {
  id        String        @id @default(cuid())
  userId    String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  
  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ChatMessage[]
  
  @@index([userId])
}

// Сообщение в чате
model ChatMessage {
  id             String   @id @default(cuid())
  conversationId String
  role           String   // USER, ASSISTANT, SYSTEM
  content        String   // Текст сообщения
  context        String?  // JSON с контекстом (сахар, еда и т.д.)
  timestamp      DateTime @default(now())
  
  conversation ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  @@index([conversationId])
}

// Базальный профиль из Nightscout
model BasalProfile {
  id        String   @id @default(cuid())
  userId    String
  startTime String   // Время начала (например, "00:00")
  rate      Float    // Скорость базала (единиц/час)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, isActive])
}

// Анализ приёма пищи (для быстрого доступа DeepSeek)
model MealAnalysis {
  id        String   @id @default(cuid())
  userId    String
  mealId    String   @unique
  
  // Состав еды
  totalCarbs   Float
  totalProtein Float
  totalFat     Float
  
  // Инсулин
  bolusUnits      Float    // Основной болюс на еду
  correctionUnits Float    @default(0) // Коррекции в течение 4 часов после еды
  totalUnits      Float    // Всего инсулина
  
  // Результаты (2-4 часа после еды)
  avgGlucose2h    Float?   // Средний сахар через 2 часа
  maxGlucose4h    Float?   // Максимальный сахар за 4 часа
  minGlucose4h    Float?   // Минимальный сахар за 4 часа
  glucoseStable   Boolean? // Стабильный ли был сахар (макс-мин < 3 ммоль/л)
  hadCorrection   Boolean  @default(false) // Была ли коррекция
  
  // Время суток
  timeOfDay       String   // MORNING, AFTERNOON, EVENING, NIGHT
  
  // Метаданные
  analysisDate    DateTime // Дата приёма пищи
  createdAt       DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  meal Meal @relation(fields: [mealId], references: [id], onDelete: Cascade)
  
  @@index([userId, analysisDate])
  @@index([userId, timeOfDay])
}
