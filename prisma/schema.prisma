// Мой доктор — дневник питания с калориями и БЖУ для похудения

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified DateTime?
  image         String?
  password      String?

  height         Int?     // Рост в см
  weight         Float?   // Вес в кг
  birthDate      DateTime? // Дата рождения (для расчёта возраста)
  calorieDeficit Int?     // Целевой дефицит ккал/день (для похудения)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts         Account[]
  sessions         Session[]
  meals            Meal[]
  menuItems        MenuItem[]
  wearableData     WearableData[]
  wearableSyncTokens WearableSyncToken[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Запрос на сброс пароля: по email создаётся токен, пользователю показывается ссылка
model PasswordResetRequest {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@index([token])
  @@index([email])
}

model Meal {
  id             String    @id @default(cuid())
  userId         String
  date           DateTime
  time           String // HH:MM
  notes          String?
  totalCarbs     Float    @default(0)
  totalProtein   Float    @default(0)
  totalFat       Float    @default(0)
  totalCalories  Float    @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  foodItems FoodItem[]

  @@index([userId, date])
}

model FoodItem {
  id             String   @id @default(cuid())
  mealId         String
  name           String
  carbsPer100g   Float
  proteinPer100g Float    @default(0)
  fatPer100g     Float    @default(0)
  weightGrams    Float
  totalCarbs     Float
  totalProtein   Float    @default(0)
  totalFat       Float    @default(0)
  totalCalories  Float    @default(0)
  order          Int      @default(0)
  createdAt      DateTime @default(now())

  meal Meal @relation(fields: [mealId], references: [id], onDelete: Cascade)

  @@index([mealId])
}

model MenuItem {
  id             String   @id @default(cuid())
  userId         String
  name           String
  carbsPer100g   Float
  proteinPer100g Float    @default(0)
  fatPer100g     Float    @default(0)
  caloriesPer100g Float   @default(0) // можно вычислять: 4*белки+4*угл+9*жиры
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, name])
}

// Данные с носимых устройств (Samsung Watch, Samsung Health и т.д.)
model WearableData {
  id        String   @id @default(cuid())
  userId    String
  type      String   // steps, sleep_minutes, heart_rate, weight, blood_oxygen, active_calories, ...
  value     Float
  unit      String?  // count, min, bpm, kg, percent, kcal, ...
  date      DateTime // дата/время измерения (начало дня для шагов, момент для пульса и т.д.)
  source    String   @default("samsung_health")
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
  @@index([userId, type, date])
}

// Токен для авторизации мобильного приложения при отправке данных с часов
model WearableSyncToken {
  id         String   @id @default(cuid())
  userId     String
  tokenHash  String   // bcrypt hash токена
  tokenPrefix String  // первые символы токена для быстрого поиска (уникальный)
  label      String?  // например "Samsung Watch"
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tokenPrefix])
  @@index([userId])
}
